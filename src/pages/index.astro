---
import Layout from "../layouts/Layout.astro";
import Hero from "../components/Hero.astro";
import CompanyCard from "../components/CompanyCard.astro";

import data from "../data/companies.json";

const holding = data?.holding;
const companies = data?.companies ?? [];
---

<Layout title={holding?.name ?? "Wilson & Wilson Group"}>
  <div class="space-y-10">
    <Hero
      title={holding?.name ?? "Wilson & Wilson Group"}
      tagline={holding?.tagline ?? "Holding & portfolio."}
    />

    <section id="bedrijven" class="space-y-4">
      <div class="flex items-end justify-between gap-4">
        <div>
          <h2 class="text-2xl font-bold text-[#3a1e10]">Onze bedrijven</h2>
          <p class="mt-1 text-sm text-[#5a2d18]/80">
            Actieve ondernemingen binnen de Wilson & Wilson Group.
          </p>
        </div>

        <a
          href="/bedrijven"
          class="text-sm font-semibold text-orange-700 hover:text-orange-800"
        >
          Alles bekijken →
        </a>
      </div>

      <div class="grid gap-5 sm:grid-cols-2 lg:grid-cols-3">
        {companies.map((c) => (
          <CompanyCard
            name={c.name}
            summary={c.tagline ?? c.summary}
            href={`/bedrijven/${c.slug}`}
          />
        ))}
      </div>
    </section>

    <section class="space-y-3">
      <h2 class="text-2xl font-bold text-[#3a1e10]">Hoe wij waarde creëren</h2>
      <ol class="space-y-2 text-sm text-[#5a2d18]/90">
        <li>
          <span class="font-semibold">1. Strategie & governance</span><br />
          Heldere structuur en focus binnen de holding.
        </li>
        <li>
          <span class="font-semibold">2. Operational excellence</span><br />
          Standaarden, processen en data als basis.
        </li>
        <li>
          <span class="font-semibold">3. Groei & partnerships</span><br />
          Schaalbare groei met duurzame samenwerkingen.
        </li>
      </ol>
    </section>
  </div>
</Layout>
