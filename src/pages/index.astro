---
import Layout from "../layouts/Layout.astro";
import CompanyHero from "../components/CompanyHero.astro";
import companies from "../data/companies.json";

const company = companies?.[0];
if (!company) throw new Error("No company found in src/data/companies.json");

const services = company.highlights ?? [];
const rationale = company.rationale ?? [];
---

<Layout title={company?.name ?? "Building Maintenance Solutions"}>
  <main class="space-y-12">
    <CompanyHero company={company} badge="BMS" />

    <!-- Diensten: geen boxes -->
    <section>
      <div class="mx-auto max-w-6xl px-6">
        <h2 class="text-xl font-semibold tracking-tight bms-ink">Diensten</h2>
        <p class="mt-2 text-sm bms-ink-2">
          Concreet aanbod, gericht op duidelijkheid en uitvoering.
        </p>

        <ul class="mt-6 grid gap-y-3 gap-x-8 sm:grid-cols-2">
          {services.map((item) => (
            <li class="text-sm leading-relaxed bms-ink-2">
              <span class="mr-2 inline-block h-1.5 w-1.5 rounded-full" style="background: rgba(11,18,48,0.55)"></span>
              {item}
            </li>
          ))}
        </ul>
      </div>
    </section>

    <div class="mx-auto max-w-6xl px-6">
      <div class="bms-hairline"></div>
    </div>

    <!-- Waarom -->
    <section>
      <div class="mx-auto max-w-6xl px-6">
        <h2 class="text-xl font-semibold tracking-tight bms-ink">
          Waarom Building Maintenance Solutions
        </h2>
        <p class="mt-2 text-sm bms-ink-2">
          Rationele argumenten: voorspelbaarheid, overzicht en professionele uitvoering.
        </p>

        <ul class="mt-6 list-disc space-y-2 pl-5 text-sm leading-relaxed bms-ink-2">
          {rationale.map((item) => (
            <li>{item}</li>
          ))}
        </ul>

        <p class="mt-8 text-sm bms-ink-3">
          <span class="font-semibold bms-ink">Onderdeel van Wilson &amp; Wilson Group</span>.
        </p>
      </div>
    </section>

    <div class="mx-auto max-w-6xl px-6">
      <div class="bms-hairline"></div>
    </div>

    <!-- CTA: geen card, alleen tekst + knoppen -->
    <section>
      <div class="mx-auto max-w-6xl px-6 pb-6">
        <h2 class="text-xl font-semibold tracking-tight bms-ink">
          {company?.ctaLabel ?? "Plan een gesprek"}
        </h2>
        <p class="mt-2 max-w-2xl text-sm bms-ink-2">
          Neem contact op om je onderhoudsvraag kort te bespreken en de volgende stap te bepalen.
        </p>

        <div class="mt-5 flex flex-wrap gap-3">
          <a
            href={company?.ctaLink ?? "/contact"}
            class="inline-flex items-center rounded-xl px-5 py-3 text-sm font-semibold bms-btn-primary"
          >
            {company?.ctaLabel ?? "Plan een gesprek"} <span class="ml-2 opacity-90">â†’</span>
          </a>

          <a
            href="/diensten"
            class="inline-flex items-center rounded-xl px-5 py-3 text-sm font-semibold bms-btn-ghost"
          >
            Bekijk diensten
          </a>
        </div>
      </div>
    </section>
  </main>
</Layout>
