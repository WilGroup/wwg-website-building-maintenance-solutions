---
import Layout from "../../layouts/Layout.astro";
import data from "../../data/companies.json";

export function getStaticPaths() {
  return data.companies.map((company) => ({
    params: { slug: company.slug },
    props: { company },
  }));
}

const { company } = Astro.props;
const c = company.contact;

const telNL = c.phone_nl.replace(/\s+/g, "");
const telCUR = c.phone_cur.replace(/\s+/g, "");
---

<Layout title={`Contact | ${company.name}`}>
  <p><a href="/bedrijven">← Terug naar bedrijven</a></p>

  <h1>Contact — {company.name}</h1>
  <p>{company.tagline}</p>

  <h2>Algemeen</h2>
  <p>
    E-mail: <a href={`mailto:${c.email}`}>{c.email}</a>
  </p>

  <h2>Nederland</h2>
  <p>
    Telefoon: <a href={`tel:${telNL}`}>{c.phone_nl}</a><br />
    Adres: {c.address_nl}
  </p>

  <h2>Curaçao</h2>
  <p>
    Telefoon: <a href={`tel:${telCUR}`}>{c.phone_cur}</a><br />
    Adres: {c.address_cur}
  </p>

  <p style="margin-top: 1.25rem; opacity: 0.85;">
    Vermeld bij voorkeur “{company.name}” in je bericht.
  </p>
</Layout>
