---
import Layout from "../../layouts/Layout.astro";
import data from "../../data/companies.json";

const holding = data.holding;
const c = holding.contact;

// tel-links: spaties eruit
const telNL = c.phone_nl.replace(/\s+/g, "");
const telCUR = c.phone_cur.replace(/\s+/g, "");
---

<Layout title={`Contact | ${holding.name}`}>
  <h1>Contact</h1>
  <p>
    Neem contact op met {holding.name}. Vermeld bij voorkeur om welk bedrijf of onderwerp het gaat.
  </p>

  <h2>Algemeen</h2>
  <p>
    E-mail: <a href={`mailto:${c.email}`}>{c.email}</a>
  </p>

  <h2>Nederland</h2>
  <p>
    Telefoon: <a href={`tel:${telNL}`}>{c.phone_nl}</a><br />
    Adres: {c.address_nl}
  </p>

  <h2>Cura√ßao</h2>
  <p>
    Telefoon: <a href={`tel:${telCUR}`}>{c.phone_cur}</a><br />
    Adres: {c.address_cur}
  </p>
</Layout>

