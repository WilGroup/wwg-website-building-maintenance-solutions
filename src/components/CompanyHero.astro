---
const { company, badge = "Administratiekantoor" } = Astro.props;
const c = company;

if (!c) throw new Error("CompanyHero: missing company prop");
---

<section class="relative overflow-hidden">
  <div class="absolute inset-0 wwg-bg"></div>
  <div class="absolute inset-0 wwg-grid opacity-10"></div>
  <div class="absolute inset-0 bg-gradient-to-b from-black/10 via-transparent to-black/10"></div>

  <div class="relative px-6 py-12 sm:px-10 sm:py-16">
    <div class="max-w-3xl">
      <div class="inline-flex items-center gap-2 rounded-full px-4 py-2 text-sm font-semibold wwg-ring bg-white/40 backdrop-blur">
        <span class="inline-block h-2 w-2 rounded-full bg-amber-600"></span>
        {badge}
      </div>

      <!-- EXACT 1 H1 -->
      <h1 class="mt-6 text-4xl font-extrabold tracking-tight sm:text-5xl">
        {c.name}
      </h1>

      <p class="mt-4 text-lg leading-relaxed opacity-90 sm:text-xl">
        {c.tagline}
      </p>

      <div class="mt-8 flex flex-wrap items-center gap-3">
        {c.ctaLink && (
          <a
            href={c.ctaLink}
            class="inline-flex items-center justify-center rounded-xl px-5 py-3 text-base font-semibold shadow-lg transition hover:shadow-xl focus:outline-none focus:ring-2 focus:ring-amber-500/40
                   bg-gradient-to-b from-amber-500 to-orange-600 text-white"
          >
            {c.ctaLabel}
            <span class="ml-2 text-white/90">â†’</span>
          </a>
        )}

        <a
          href="/diensten"
          class="inline-flex items-center justify-center rounded-xl px-5 py-3 text-base font-semibold transition hover:bg-white/30 focus:outline-none focus:ring-2 focus:ring-amber-500/30
                 bg-white/10 backdrop-blur"
        >
          Bekijk diensten
        </a>
      </div>
    </div>
  </div>
</section>
