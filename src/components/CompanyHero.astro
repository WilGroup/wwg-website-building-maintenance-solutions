---
const { company, badge = "BMS" } = Astro.props;
const c = company;
if (!c) throw new Error("CompanyHero: missing company prop");
---

<section class="relative overflow-hidden">
  <!-- Geen panel/card, alleen layout -->
  <div class="mx-auto max-w-6xl px-6 pt-14 pb-10 sm:pt-16 sm:pb-12">
    <div class="flex flex-col gap-8 sm:flex-row sm:items-center sm:justify-between">
      <!-- Links: badge + copy -->
      <div class="max-w-3xl">
        <div class="inline-flex items-center gap-2 text-sm font-semibold bms-ink-2">
          <span class="inline-block h-2 w-2 rounded-full" style="background: rgba(11,18,48,0.65)"></span>
          {badge}
        </div>

        <!-- EXACT 1 H1 -->
        <h1 class="mt-5 text-4xl font-extrabold tracking-tight bms-ink sm:text-5xl">
          {c.name}
        </h1>

        <p class="mt-4 text-lg leading-relaxed bms-ink-2 sm:text-xl">
          {c.tagline}
        </p>

        <div class="mt-7 flex flex-wrap items-center gap-3">
          {c.ctaLink && (
            <a
              href={c.ctaLink}
              class="inline-flex items-center rounded-xl px-5 py-3 text-sm font-semibold bms-btn-primary"
            >
              {c.ctaLabel}
              <span class="ml-2 opacity-90">â†’</span>
            </a>
          )}

          <a
            href="/diensten"
            class="inline-flex items-center rounded-xl px-5 py-3 text-sm font-semibold bms-btn-ghost"
          >
            Bekijk diensten
          </a>
        </div>
      </div>

      <!-- Rechts: logo (plek geven op de site) -->
      <div class="shrink-0">
        <img
          src="/images/bms-logo.png"
          alt="BMS logo"
          class="h-14 w-auto opacity-95"
          loading="eager"
        />
      </div>
    </div>
  </div>

  <!-- Subtiele scheiding onder hero (optioneel) -->
  <div class="mx-auto max-w-6xl px-6">
    <div class="bms-hairline"></div>
  </div>
</section>
