---
const title = "Wilson & Wilson Group";
const subtitle =
  "Holding & portfolio. Dit is placeholdertekst die we straks 1-op-1 uit het pitchdeck aanscherpen.";
const ctaText = "Bekijk onze bedrijven";
const ctaHref = "#bedrijven";
---

<section class="relative overflow-hidden rounded-3xl border border-amber-200/60 bg-white/70 shadow-[0_12px_40px_rgba(0,0,0,0.08)]">
  <!-- Background: gradient + subtle grid -->
  <div class="absolute inset-0 wwg-bg"></div>
  <div class="absolute inset-0 wwg-grid opacity-10"></div>

  <!-- Soft vignette for depth -->
  <div class="absolute inset-0 bg-gradient-to-b from-white/70 via-white/40 to-white/80"></div>

  <div class="relative px-6 py-12 sm:px-10 sm:py-16">
    <div class="max-w-3xl">
      <!-- Badge -->
      <div class="inline-flex items-center gap-2 rounded-full px-4 py-2 text-sm font-semibold wwg-ring bg-white/70 backdrop-blur">
        <span class="inline-block h-2 w-2 rounded-full bg-amber-600"></span>
        Holding
      </div>

      <h1 class="mt-6 text-4xl font-extrabold tracking-tight text-[#3a1e10] sm:text-5xl">
        {title}
      </h1>

      <p class="mt-4 text-lg leading-relaxed text-[#5a2d18] sm:text-xl">
        {subtitle}
      </p>

      <div class="mt-8 flex flex-wrap items-center gap-3">
        <a
          href={ctaHref}
          class="inline-flex items-center justify-center rounded-xl px-5 py-3 text-base font-semibold text-white shadow-lg transition hover:shadow-xl focus:outline-none focus:ring-2 focus:ring-amber-500/50
                 bg-gradient-to-b from-amber-500 to-orange-600"
        >
          {ctaText}
          <span class="ml-2 text-white/90">â†’</span>
        </a>

        <a
          href="/bedrijven"
          class="inline-flex items-center justify-center rounded-xl px-5 py-3 text-base font-semibold text-[#3a1e10] transition hover:bg-white/60 focus:outline-none focus:ring-2 focus:ring-amber-500/40"
        >
          Alle profielen
        </a>
      </div>
    </div>
  </div>
</section>
