---
const nav = [
  { label: "Home", href: "/" },
  { label: "Diensten", href: "/diensten" },
  { label: "Contact", href: "/contact" },
];
---

<header class="sticky top-0 z-50">
  <div class="mx-auto max-w-6xl px-4 py-4">
    <div class="bms-surface rounded-2xl px-4 py-3 flex items-center justify-between">
      <!-- Logo + naam -->
      <a href="/" class="flex items-center gap-3">
        <img
          src="/bms-logo.png"
          alt="Building Maintenance Solutions"
          class="h-8 w-auto"
          loading="eager"
        />
        <span class="text-sm font-semibold tracking-tight bms-ink">
          Building Maintenance Solutions
        </span>
      </a>

      <!-- Navigatie -->
      <nav class="flex items-center gap-6">
        {nav.map((item) => (
          <a
            href={item.href}
            class="text-sm font-medium bms-ink-2 hover:bms-ink transition"
          >
            {item.label}
          </a>
        ))}
      </nav>
    </div>
  </div>
</header>
