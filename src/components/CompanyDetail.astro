---
const { company } = Astro.props;
const c = company;

if (!c) {
  throw new Error("CompanyDetail: missing company prop");
}

// Template: Home toont rationale als 3 bullets
const whyUs = (c.rationale || []).slice(0, 3);
---

<section class="max-w-3xl">
  <!-- Hero-onderdeel (H1 staat elders / in Hero component of page). -->
  <p class="mt-2 text-lg opacity-85">
    {c.tagline}
  </p>

  <p class="mt-4 leading-relaxed">
    {c.summary}
  </p>

  <!-- Highlights -->
  <section class="mt-10">
    <h2 class="text-xl font-semibold">Highlights</h2>
    <ul class="mt-4 space-y-2">
      {c.highlights?.map((item) => <li>{item}</li>)}
    </ul>
  </section>

  <!-- Waarom ons (rationale) -->
  <section class="mt-10">
    <h2 class="text-xl font-semibold">Waarom kiezen voor ons</h2>
    <ul class="mt-4 space-y-2">
      {whyUs.map((item) => <li>{item}</li>)}
    </ul>
  </section>

  <!-- Contact-CTA -->
  {c.ctaLink && (
    <section class="mt-12">
      <h2 class="text-xl font-semibold">Contact</h2>
      <p class="mt-3 opacity-90">
        Wil je kennismaken of kort afstemmen wat je nodig hebt? Neem contact met ons op.
      </p>

      <div class="mt-5">
        <a
          href={c.ctaLink}
          class="inline-flex items-center gap-2 rounded-2xl px-5 py-3 font-semibold underline underline-offset-4"
        >
          {c.ctaLabel} <span aria-hidden="true">â†’</span>
        </a>
      </div>
    </section>
  )}
</section>
