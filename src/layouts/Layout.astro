---
import "../styles/global.css";
const { title = "Building Maintenance Solutions" } = Astro.props;

import SiteHeader from "../components/SiteHeader.astro";
import SiteFooter from "../components/SiteFooter.astro";
---

<!DOCTYPE html>
<html lang="nl">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>
  </head>

  <body class="min-h-screen flex flex-col antialiased text-[var(--bms-ink)]">
    <!-- Donker champagne basis onderin -->
    <div class="fixed inset-0 -z-20 bms-bg-base pointer-events-none"></div>

    <!-- Hoofdverloop: champagne -> wit -->
    <div class="fixed inset-0 -z-10 bms-bg pointer-events-none"></div>

    <SiteHeader />

    <main class="flex-1 mx-auto w-full max-w-6xl px-4 py-12 sm:py-16">
      <slot />
    </main>

    <SiteFooter />
  </body>
</html>

